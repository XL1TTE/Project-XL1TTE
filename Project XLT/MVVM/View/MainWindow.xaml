<Window x:Class="Project_XLT.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_XLT.MVVM.View"
        xmlns:components="clr-namespace:Project_XLT.Components"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" 
        AllowsTransparency="True"
        Background="Transparent"
        MinHeight="720" MinWidth="1400"
        ResizeMode="CanResize"
        WindowStyle="None">
    <Grid Margin="0">
        <components:ResizeBox Panel.ZIndex="1"/>
        <ContentControl Content="{Binding Navigation.GlobalCurrentViewModel}"/>
    </Grid>
</Window>
